{% paginate customer.addresses by 10 %}
{% comment %} Account Addresses - Helios V2 Industrial Minimalist Style {% endcomment %}

<div class="addresses-page">
  <div class="addresses-container">
    
    {% comment %}--- HEADER ---{% endcomment %}
    <div class="addresses-header">
      <a href="{{ routes.account_url }}" class="back-link">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15,18 9,12 15,6"></polyline>
        </svg>
        Quay lại tài khoản
      </a>
      <h1 class="addresses-title">Địa Chỉ Của Tôi</h1>
      <button type="button" class="btn-add-address" onclick="document.getElementById('addAddressForm').classList.toggle('is-visible')">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="12" y1="5" x2="12" y2="19"></line>
          <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
        Thêm Địa Chỉ Mới
      </button>
    </div>

    {% comment %}--- ADD ADDRESS FORM ---{% endcomment %}
    <div id="addAddressForm" class="address-form-wrapper">
      <div class="form-card">
        <h3 class="form-title">Thêm Địa Chỉ Mới</h3>
        {% form 'customer_address', customer.new_address %}
        <div class="form-grid">
          <div class="form-group">
            <label for="address_first_name_new">Họ</label>
            <input type="text" id="address_first_name_new" name="address[first_name]" value="{{form.first_name}}" placeholder="Nhập họ">
          </div>
          <div class="form-group">
            <label for="address_last_name_new">Tên</label>
            <input type="text" id="address_last_name_new" name="address[last_name]" value="{{form.last_name}}" placeholder="Nhập tên">
          </div>
          <div class="form-group full-width">
            <label for="address_company_new">Công ty (tùy chọn)</label>
            <input type="text" id="address_company_new" name="address[company]" value="{{form.company}}" placeholder="Tên công ty">
          </div>
          <div class="form-group full-width">
            <label for="address_address1_new">Địa chỉ</label>
            <input type="text" id="address_address1_new" name="address[address1]" value="{{form.address1}}" placeholder="Số nhà, tên đường">
          </div>
          <div class="form-group full-width">
            <label for="address_address2_new">Địa chỉ bổ sung (tùy chọn)</label>
            <input type="text" id="address_address2_new" name="address[address2]" value="{{form.address2}}" placeholder="Căn hộ, tầng...">
          </div>
          <div class="form-group">
            <label for="address_city_new">Thành phố</label>
            <input type="text" id="address_city_new" name="address[city]" value="{{form.city}}" placeholder="Thành phố">
          </div>
          <div class="form-group">
            <label for="address_country_new">Quốc gia</label>
            <select id="address_country_new" name="address[country]" data-default="{{form.country}}">{{ all_country_option_tags }}</select>
          </div>
          <div class="form-group" id="address_province_container_new" style="display:none">
            <label for="address_province_new">Tỉnh/Thành</label>
            <select id="address_province_new" name="address[province]" data-default="{{form.province}}"></select>
          </div>
          <div class="form-group">
            <label for="address_zip_new">Mã bưu điện</label>
            <input type="text" id="address_zip_new" name="address[zip]" value="{{form.zip}}" placeholder="Mã bưu điện">
          </div>
          <div class="form-group">
            <label for="address_phone_new">Số điện thoại</label>
            <input type="text" id="address_phone_new" name="address[phone]" value="{{form.phone}}" placeholder="Số điện thoại">
          </div>
          <div class="form-group full-width checkbox-group">
            <label class="checkbox-label">
              {{ form.set_as_default_checkbox }}
              <span>Đặt làm địa chỉ mặc định</span>
            </label>
          </div>
        </div>
        <div class="form-actions">
          <button type="submit" class="btn-primary">Thêm Địa Chỉ</button>
          <button type="button" class="btn-secondary" onclick="document.getElementById('addAddressForm').classList.remove('is-visible')">Hủy</button>
        </div>
        {% endform %}
      </div>
    </div>

    {% comment %}--- ADDRESS LIST ---{% endcomment %}
    <div class="addresses-grid">
      {% for address in customer.addresses %}
      <div class="address-card" data-address-id="{{ address.id }}">
        <div class="address-view" id="view_address_{{address.id}}">
          {% if address == customer.default_address %}
          <span class="default-badge">Mặc định</span>
          {% endif %}
          <div class="address-content">
            <p class="address-name">{{ address.first_name }} {{ address.last_name }}</p>
            {% if address.company != blank %}<p class="address-company">{{ address.company }}</p>{% endif %}
            <p class="address-street">{{ address.street }}</p>
            <p class="address-city">{{ address.city }}{% if address.province_code %}, {{ address.province_code }}{% endif %}</p>
            <p class="address-country">{{ address.country }} {{ address.zip }}</p>
            {% if address.phone != blank %}<p class="address-phone">{{ address.phone }}</p>{% endif %}
          </div>
          <div class="address-actions">
            <button type="button" class="btn-edit" onclick="toggleEditAddress('{{ address.id }}')">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
              </svg>
              Sửa
            </button>
            <button type="button" class="btn-delete" onclick="deleteAddress('{{ address.url }}')">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="3 6 5 6 21 6"></polyline>
                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
              </svg>
              Xóa
            </button>
          </div>
        </div>
        
        <div class="address-edit" id="edit_address_{{address.id}}" style="display:none">
          <h3 class="form-title">Chỉnh Sửa Địa Chỉ</h3>
          {% form 'customer_address', address %}
          <div class="form-grid">
            <div class="form-group">
              <label for="address_first_name_{{form.id}}">Họ</label>
              <input type="text" id="address_first_name_{{form.id}}" name="address[first_name]" value="{{form.first_name}}">
            </div>
            <div class="form-group">
              <label for="address_last_name_{{form.id}}">Tên</label>
              <input type="text" id="address_last_name_{{form.id}}" name="address[last_name]" value="{{form.last_name}}">
            </div>
            <div class="form-group full-width">
              <label for="address_company_{{form.id}}">Công ty</label>
              <input type="text" id="address_company_{{form.id}}" name="address[company]" value="{{form.company}}">
            </div>
            <div class="form-group full-width">
              <label for="address_address1_{{form.id}}">Địa chỉ</label>
              <input type="text" id="address_address1_{{form.id}}" name="address[address1]" value="{{form.address1}}">
            </div>
            <div class="form-group full-width">
              <label for="address_address2_{{form.id}}">Địa chỉ bổ sung</label>
              <input type="text" id="address_address2_{{form.id}}" name="address[address2]" value="{{form.address2}}">
            </div>
            <div class="form-group">
              <label for="address_city_{{form.id}}">Thành phố</label>
              <input type="text" id="address_city_{{form.id}}" name="address[city]" value="{{form.city}}">
            </div>
            <div class="form-group">
              <label for="address_country_{{form.id}}">Quốc gia</label>
              <select id="address_country_{{form.id}}" name="address[country]" data-default="{{form.country}}">{{ all_country_option_tags }}</select>
            </div>
            <div class="form-group" id="address_province_container_{{form.id}}" style="display:none">
              <label for="address_province_{{form.id}}">Tỉnh/Thành</label>
              <select id="address_province_{{form.id}}" name="address[province]" data-default="{{form.province}}"></select>
            </div>
            <div class="form-group">
              <label for="address_zip_{{form.id}}">Mã bưu điện</label>
              <input type="text" id="address_zip_{{form.id}}" name="address[zip]" value="{{form.zip}}">
            </div>
            <div class="form-group">
              <label for="address_phone_{{form.id}}">Số điện thoại</label>
              <input type="text" id="address_phone_{{form.id}}" name="address[phone]" value="{{form.phone}}">
            </div>
            <div class="form-group full-width checkbox-group">
              <label class="checkbox-label">
                {{ form.set_as_default_checkbox }}
                <span>Đặt làm địa chỉ mặc định</span>
              </label>
            </div>
          </div>
          <div class="form-actions">
            <button type="submit" class="btn-primary">Cập Nhật</button>
            <button type="button" class="btn-secondary" onclick="toggleEditAddress('{{ address.id }}')">Hủy</button>
          </div>
          {% endform %}
        </div>
      </div>
      {% endfor %}
      
      {% if customer.addresses.size == 0 %}
      <div class="no-addresses">
        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
          <circle cx="12" cy="10" r="3"></circle>
        </svg>
        <p>Bạn chưa có địa chỉ nào được lưu.</p>
        <button type="button" class="btn-primary" onclick="document.getElementById('addAddressForm').classList.add('is-visible')">
          Thêm Địa Chỉ Đầu Tiên
        </button>
      </div>
      {% endif %}
    </div>

    {% if paginate.pages > 1 %}
    <div class="addresses-pagination">
      {{ paginate | default_pagination }}
    </div>
    {% endif %}
    
  </div>
</div>

<style>
/* Addresses Page - Helios V2 Industrial Minimalist */
.addresses-page {
  background: var(--helios-black, #0a0a0a);
  color: #fff;
  min-height: 100vh;
  padding: 40px 20px;
}

.addresses-container {
  max-width: 900px;
  margin: 0 auto;
}

/* Header */
.addresses-header {
  margin-bottom: 40px;
}

.back-link {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  color: var(--helios-text-muted, #888);
  text-decoration: none;
  font-size: 14px;
  margin-bottom: 20px;
  transition: color 0.2s;
}

.back-link:hover {
  color: var(--helios-orange, #FAB320);
}

.addresses-title {
  font-size: 28px;
  font-weight: 600;
  margin: 0 0 20px;
  letter-spacing: -0.5px;
}

.btn-add-address {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  background: var(--helios-orange, #FAB320);
  color: #000;
  border: none;
  padding: 12px 24px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s;
}

.btn-add-address:hover {
  background: #e5a31c;
  transform: translateY(-2px);
}

/* Address Form */
.address-form-wrapper {
  display: none;
  margin-bottom: 40px;
}

.address-form-wrapper.is-visible {
  display: block;
}

.form-card {
  background: var(--helios-dark-grey, #1a1a1a);
  border: 1px solid var(--helios-border, #2a2a2a);
  padding: 30px;
}

.form-title {
  font-size: 18px;
  font-weight: 600;
  margin: 0 0 25px;
  padding-bottom: 15px;
  border-bottom: 1px solid var(--helios-border, #2a2a2a);
}

.form-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.form-group.full-width {
  grid-column: 1 / -1;
}

.form-group label {
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  color: var(--helios-text-muted, #888);
}

.form-group input,
.form-group select {
  background: rgba(255,255,255,0.05);
  border: 1px solid var(--helios-border, #2a2a2a);
  padding: 12px 15px;
  color: #fff;
  font-size: 14px;
  transition: border-color 0.2s;
}

.form-group input:focus,
.form-group select:focus {
  outline: none;
  border-color: var(--helios-orange, #FAB320);
}

.form-group input::placeholder {
  color: #555;
}

.checkbox-group {
  margin-top: 10px;
}

.checkbox-label {
  display: flex;
  align-items: center;
  gap: 10px;
  cursor: pointer;
  font-size: 14px;
  color: #ccc;
}

.form-actions {
  display: flex;
  gap: 15px;
  margin-top: 25px;
  padding-top: 25px;
  border-top: 1px solid var(--helios-border, #2a2a2a);
}

.btn-primary {
  background: var(--helios-orange, #FAB320);
  color: #000;
  border: none;
  padding: 12px 30px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s;
}

.btn-primary:hover {
  background: #e5a31c;
}

.btn-secondary {
  background: transparent;
  color: #888;
  border: 1px solid var(--helios-border, #2a2a2a);
  padding: 12px 30px;
  font-size: 14px;
  cursor: pointer;
  transition: all 0.2s;
}

.btn-secondary:hover {
  color: #fff;
  border-color: #555;
}

/* Address Grid */
.addresses-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 20px;
}

.address-card {
  background: var(--helios-dark-grey, #1a1a1a);
  border: 1px solid var(--helios-border, #2a2a2a);
  padding: 25px;
  position: relative;
  transition: border-color 0.2s;
}

.address-card:hover {
  border-color: #444;
}

.default-badge {
  position: absolute;
  top: 15px;
  right: 15px;
  background: var(--helios-orange, #FAB320);
  color: #000;
  font-size: 10px;
  font-weight: 700;
  text-transform: uppercase;
  padding: 4px 10px;
  letter-spacing: 0.5px;
}

.address-content {
  margin-bottom: 20px;
}

.address-content p {
  margin: 0 0 5px;
  color: #999;
  font-size: 14px;
  line-height: 1.5;
}

.address-name {
  color: #fff !important;
  font-weight: 600;
  font-size: 16px !important;
  margin-bottom: 10px !important;
}

.address-actions {
  display: flex;
  gap: 15px;
  padding-top: 15px;
  border-top: 1px solid var(--helios-border, #2a2a2a);
}

.btn-edit,
.btn-delete {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  background: transparent;
  border: none;
  color: #888;
  font-size: 13px;
  cursor: pointer;
  padding: 0;
  transition: color 0.2s;
}

.btn-edit:hover {
  color: var(--helios-orange, #FAB320);
}

.btn-delete:hover {
  color: #ff6b6b;
}

/* Edit Address */
.address-edit {
  background: var(--helios-dark-grey, #1a1a1a);
}

.address-edit .form-title {
  margin-bottom: 20px;
}

/* No Addresses */
.no-addresses {
  grid-column: 1 / -1;
  text-align: center;
  padding: 60px 20px;
  color: #888;
}

.no-addresses svg {
  opacity: 0.3;
  margin-bottom: 20px;
}

.no-addresses p {
  margin: 0 0 25px;
  font-size: 16px;
}

/* Pagination */
.addresses-pagination {
  margin-top: 40px;
  text-align: center;
}

/* Responsive */
@media (max-width: 600px) {
  .form-grid {
    grid-template-columns: 1fr;
  }
  
  .form-group.full-width {
    grid-column: 1;
  }
  
  .addresses-grid {
    grid-template-columns: 1fr;
  }
  
  .form-actions {
    flex-direction: column;
  }
}
</style>

<script src="{{ 'shopify_common.js' | shopify_asset_url }}"></script>
<script>
function toggleEditAddress(addressId) {
  const viewEl = document.getElementById('view_address_' + addressId);
  const editEl = document.getElementById('edit_address_' + addressId);
  if (viewEl && editEl) {
    viewEl.style.display = viewEl.style.display === 'none' ? 'block' : 'none';
    editEl.style.display = editEl.style.display === 'none' ? 'block' : 'none';
  }
}

function deleteAddress(url) {
  if (confirm('Bạn có chắc muốn xóa địa chỉ này không?')) {
    Shopify.postLink(url, { parameters: { _method: 'delete' } });
  }
}

// Initialize country/province selectors
document.addEventListener('DOMContentLoaded', function() {
  new Shopify.CountryProvinceSelector('address_country_new', 'address_province_new', {
    hideElement: 'address_province_container_new'
  });
  {% for address in customer.addresses %}
  new Shopify.CountryProvinceSelector('address_country_{{address.id}}', 'address_province_{{address.id}}', {
    hideElement: 'address_province_container_{{address.id}}'
  });
  {% endfor %}
});
</script>
{% endpaginate %}
