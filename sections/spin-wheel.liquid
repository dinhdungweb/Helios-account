<!-- Logic phân hạng khách hàng -->
{% if customer %}
  {% if customer.metafields.custom.total_spent != blank and customer.metafields.custom.total_spent != 0 %}
    {% assign total_spent = customer.metafields.custom.total_spent | plus: 0 %}
  {% else %}
    {% assign total_spent = customer.total_spent | divided_by: 100 %}
  {% endif %}

  {% if customer.tags contains "BLACK DIAMOND" %}
    {% assign tier = "BLACK DIAMOND" %}
  {% elsif customer.tags contains "DIAMOND" %}
    {% assign tier = "DIAMOND" %}
  {% elsif customer.tags contains "PLATINUM" %}
    {% assign tier = "PLATINUM" %}
  {% elsif customer.tags contains "GOLD" %}
    {% assign tier = "GOLD" %}
  {% elsif customer.tags contains "SILVER" %}
    {% assign tier = "SILVER" %}
  {% else %}
    {% if total_spent < 3000000 %}
      {% assign tier = "MEMBER" %}
    {% elsif total_spent >= 3000000 and total_spent < 6000000 %}
      {% assign tier = "SILVER" %}
    {% elsif total_spent >= 6000000 and total_spent < 10000000 %}
      {% assign tier = "GOLD" %}
    {% elsif total_spent >= 10000000 and total_spent < 20000000 %}
      {% assign tier = "PLATINUM" %}
    {% elsif total_spent >= 20000000 and total_spent < 100000000 %}
      {% assign tier = "DIAMOND" %}
    {% else %}
      {% assign tier = "BLACK DIAMOND" %}
    {% endif %}
  {% endif %}

  {% assign has_spun = customer.metafields.custom.lucky_wheel_spun %}
  {% assign can_spin = false %}
  {% if tier == "SILVER" or tier == "GOLD" or tier == "PLATINUM" or tier == "DIAMOND" or tier == "BLACK DIAMOND" %}
    {% if has_spun == "true" or has_spun == true %}
      {% assign can_spin = false %}
      {% assign already_spun = true %}
    {% else %}
      {% assign can_spin = true %}
      {% assign already_spun = false %}
    {% endif %}
  {% endif %}
{% endif %}

{% schema %}
{
  "name": "Vòng Quay May Mắn",
  "settings": [
    {
      "type": "text",
      "id": "button_text",
      "label": "Chữ trên nút quay",
      "default": "QUAY"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Màu nền nút",
      "default": "#fcbf49"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Màu chữ nút",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "prize",
      "name": "Phần thưởng",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Tên phần thưởng",
          "default": "Giảm 10%"
        },
        {
          "type": "color",
          "id": "color",
          "label": "Màu phần thưởng",
          "default": "#f8f9fa"
        },
        {
          "type": "text",
          "id": "code",
          "label": "Mã giảm giá",
          "default": "LUCKY10"
        },
        {
          "type": "number",
          "id": "probability",
          "label": "Xác suất (%)",
          "default": 20
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Vòng Quay May Mắn",
      "category": "Khuyến mãi",
      "blocks": [
        { "type": "prize" },
        { "type": "prize" },
        { "type": "prize" }
      ]
    }
  ]
}
{% endschema %}

<!-- Modal kết quả -->
<div id="lucky-wheel-modal" class="wheel-modal" style="display: none;">
  <div class="wheel-modal-box">
    <h2>Bạn đã trúng thưởng!</h2>
    <p id="modal-prize-text"></p>
    <button onclick="document.getElementById('lucky-wheel-modal').style.display='none'">Đóng</button>
  </div>
</div>

<!-- Vòng quay -->
<div id="lucky-wheel-container">
  {% if customer == null %}
    <!-- Chưa đăng nhập -->
    <div class="wheel-message">
      <h3>Vui lòng đăng nhập để tham gia vòng quay may mắn</h3>
      <a href="/account/login" class="login-button">Đăng nhập</a>
    </div>
  {% elsif can_spin == false %}
    <!-- Chưa đủ hạng -->
    <div class="wheel-message">
      <h3>Chỉ khách hàng hạng SILVER trở lên mới được tham gia</h3>
      <p>Hạng hiện tại của bạn: <strong>{{ tier }}</strong></p>
      <p>Tiêu thêm để lên hạng SILVER và nhận quyền quay thưởng!</p>
    </div>
  {% else %}
    <!-- Được phép quay -->
    <div class="lucky-wheel-frame">
      <canvas id="lucky-wheel-canvas" width="600" height="600"></canvas>
      <div id="lucky-wheel-spin">{{ section.settings.button_text }}</div>
      <div id="lucky-wheel-pointer"></div>
    </div>
  {% endif %}
</div>

