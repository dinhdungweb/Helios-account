{% doc %}
  @prompt
    large text filled with an image
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-text-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding }}px 20px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-image-text-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-image-text-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    line-height: {{ block.settings.line_height }};
    margin: 0;
    padding: 0;
    background: url('{{ block.settings.background_image | image_url: width: 2000 }}') center/cover;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
    position: relative;
  }

  .ai-image-text-heading-{{ ai_gen_id }}::before {
    content: '{{ block.settings.text | escape }}';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: {{ block.settings.fallback_color }};
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
    z-index: -1;
  }

  .ai-image-text-placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    padding: 100px 20px;
    text-align: center;
    border-radius: 8px;
    position: relative;
  }

  .ai-image-text-placeholder-{{ ai_gen_id }} svg {
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-image-text-empty-state-{{ ai_gen_id }} {
    margin-top: 20px;
    font-size: 14px;
    color: #666;
  }

  @media screen and (max-width: 749px) {
    .ai-image-text-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size_mobile }}px;
    }

    .ai-image-text-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_mobile }}px 16px;
    }
  }

  @supports not (background-clip: text) {
    .ai-image-text-heading-{{ ai_gen_id }} {
      color: {{ block.settings.fallback_color }};
      background: none;
    }
  }
{% endstyle %}

<div class="ai-image-text-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-text-container-{{ ai_gen_id }}">
    {% if block.settings.background_image and block.settings.text != blank %}
      <h2 class="ai-image-text-heading-{{ ai_gen_id }}">
        {{ block.settings.text }}
      </h2>
    {% elsif block.settings.text != blank %}
      <h2 class="ai-image-text-heading-{{ ai_gen_id }}" style="background: {{ block.settings.fallback_color }}; -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
        {{ block.settings.text }}
      </h2>
    {% else %}
      <div class="ai-image-text-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-image-text-empty-state-{{ ai_gen_id }}">
          Add text and an image to create an image-filled text effect
        </div>
      </div>
    {% endif %}
  </div>
</div>

