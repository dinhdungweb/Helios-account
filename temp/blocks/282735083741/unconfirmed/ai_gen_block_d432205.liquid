{% doc %}
  @prompt
    Please code a timeline section for me with a vertical layout, one side for text and the other for media (which could be an image or video), with the options interchangeable. Optimize the code for fast page load times. The text column should have five characters at the top and a description at the bottom., làm cho tôi 1 đường line uốn lượn ở giữa đánh dấu các mốc thời gian nữa.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-timeline-{{ ai_gen_id }} {
    position: relative;
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-timeline-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    position: relative;
  }

  .ai-timeline-item-{{ ai_gen_id }} {
    position: relative;
    display: grid;
    grid-template-columns: 1fr 80px 1fr;
    gap: 30px;
    margin-bottom: {{ block.settings.item_spacing }}px;
    align-items: center;
  }

  .ai-timeline-item-{{ ai_gen_id }}:last-child {
    margin-bottom: 0;
  }

  .ai-timeline-text-{{ ai_gen_id }} {
    padding: {{ block.settings.text_padding }}px;
    background-color: {{ block.settings.text_bg_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-timeline-text-left-{{ ai_gen_id }} {
    grid-column: 1;
    text-align: right;
  }

  .ai-timeline-text-right-{{ ai_gen_id }} {
    grid-column: 3;
    text-align: left;
  }

  .ai-timeline-year-{{ ai_gen_id }} {
    font-size: {{ block.settings.year_size }}px;
    font-weight: 700;
    color: {{ block.settings.year_color }};
    margin: 0 0 8px 0;
    line-height: 1.2;
  }

  .ai-timeline-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.5;
    margin: 0;
  }

  .ai-timeline-center-{{ ai_gen_id }} {
    grid-column: 2;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 2;
  }

  .ai-timeline-dot-{{ ai_gen_id }} {
    width: {{ block.settings.dot_size }}px;
    height: {{ block.settings.dot_size }}px;
    background-color: {{ block.settings.dot_color }};
    border: {{ block.settings.dot_border_width }}px solid {{ block.settings.dot_border_color }};
    border-radius: 50%;
    position: relative;
    z-index: 3;
  }

  .ai-timeline-line-{{ ai_gen_id }} {
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 2px;
    transform: translateX(-50%);
    z-index: 1;
  }

  .ai-timeline-line-{{ ai_gen_id }} svg {
    position: absolute;
    left: 50%;
    top: 0;
    height: 100%;
    transform: translateX(-50%);
  }

  .ai-timeline-media-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    border-radius: {{ block.settings.media_border_radius }}px;
    overflow: hidden;
  }

  .ai-timeline-media-left-{{ ai_gen_id }} {
    grid-column: 3;
  }

  .ai-timeline-media-right-{{ ai_gen_id }} {
    grid-column: 1;
  }

  .ai-timeline-media-{{ ai_gen_id }} img,
  .ai-timeline-media-{{ ai_gen_id }} video {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.media_border_radius }}px;
  }

  .ai-timeline-media-placeholder-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 75%;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.media_border_radius }}px;
  }

  .ai-timeline-media-placeholder-{{ ai_gen_id }} svg {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 60%;
    height: 60%;
  }

  @media screen and (max-width: 768px) {
    .ai-timeline-item-{{ ai_gen_id }} {
      grid-template-columns: 60px 1fr;
      gap: 20px;
    }

    .ai-timeline-text-left-{{ ai_gen_id }},
    .ai-timeline-text-right-{{ ai_gen_id }} {
      grid-column: 2;
      text-align: left;
    }

    .ai-timeline-center-{{ ai_gen_id }} {
      grid-column: 1;
      grid-row: 1;
    }

    .ai-timeline-media-left-{{ ai_gen_id }},
    .ai-timeline-media-right-{{ ai_gen_id }} {
      grid-column: 2;
      grid-row: 2;
    }

    .ai-timeline-year-{{ ai_gen_id }} {
      font-size: {{ block.settings.year_size | times: 0.8 }}px;
    }

    .ai-timeline-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-timeline-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-timeline-container-{{ ai_gen_id }}">
    <div class="ai-timeline-line-{{ ai_gen_id }}">
      <svg width="40" height="100%" viewBox="0 0 40 100" preserveAspectRatio="none">
        <path
          d="M20,0 Q30,25 20,50 Q10,75 20,100"
          stroke="{{ block.settings.line_color }}"
          stroke-width="{{ block.settings.line_width }}"
          fill="none"
          vector-effect="non-scaling-stroke"
        />
      </svg>
    </div>

    {% for i in (1..5) %}
      {% liquid
        assign year_key = 'year_' | append: i
        assign description_key = 'description_' | append: i
        assign media_type_key = 'media_type_' | append: i
        assign image_key = 'image_' | append: i
        assign video_key = 'video_' | append: i
        assign layout_key = 'layout_' | append: i

        assign year = block.settings[year_key]
        assign description = block.settings[description_key]
        assign media_type = block.settings[media_type_key]
        assign image = block.settings[image_key]
        assign video = block.settings[video_key]
        assign layout = block.settings[layout_key]
      %}

      {% if year != blank or description != blank %}
        <div class="ai-timeline-item-{{ ai_gen_id }}">
          <div class="ai-timeline-center-{{ ai_gen_id }}">
            <div class="ai-timeline-dot-{{ ai_gen_id }}"></div>
          </div>

          {% if layout == 'text_left' %}
            <div class="ai-timeline-text-{{ ai_gen_id }} ai-timeline-text-left-{{ ai_gen_id }}">
              {% if year != blank %}
                <div class="ai-timeline-year-{{ ai_gen_id }}">{{ year }}</div>
              {% endif %}
              {% if description != blank %}
                <div class="ai-timeline-description-{{ ai_gen_id }}">{{ description }}</div>
              {% endif %}
            </div>

            <div class="ai-timeline-media-{{ ai_gen_id }} ai-timeline-media-left-{{ ai_gen_id }}">
              {% if media_type == 'video' and video != blank %}
                {{ video | video_tag: autoplay: true, loop: true, muted: true, controls: false }}
              {% elsif media_type == 'image' and image != blank %}
                <img
                  src="{{ image | image_url: width: 800 }}"
                  alt="{{ image.alt | escape }}"
                  loading="lazy"
                  width="{{ image.width }}"
                  height="{{ image.height }}"
                >
              {% else %}
                <div class="ai-timeline-media-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
          {% else %}
            <div class="ai-timeline-media-{{ ai_gen_id }} ai-timeline-media-right-{{ ai_gen_id }}">
              {% if media_type == 'video' and video != blank %}
                {{ video | video_tag: autoplay: true, loop: true, muted: true, controls: false }}
              {% elsif media_type == 'image' and image != blank %}
                <img
                  src="{{ image | image_url: width: 800 }}"
                  alt="{{ image.alt | escape }}"
                  loading="lazy"
                  width="{{ image.width }}"
                  height="{{ image.height }}"
                >
              {% else %}
                <div class="ai-timeline-media-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="ai-timeline-text-{{ ai_gen_id }} ai-timeline-text-right-{{ ai_gen_id }}">
              {% if year != blank %}
                <div class="ai-timeline-year-{{ ai_gen_id }}">{{ year }}</div>
              {% endif %}
              {% if description != blank %}
                <div class="ai-timeline-description-{{ ai_gen_id }}">{{ description }}</div>
              {% endif %}
            </div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

